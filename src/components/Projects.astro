<script>
    document.addEventListener("DOMContentLoaded", function () {
        var hoverTarget = document.getElementById("hovertest"); // Replace with your actual hover target ID
        var projectHover = document.getElementById("project-hover");

        var hoverWidth = 500;
        var hoverHeight = 300;
        var mouseX = 0,
            mouseY = 0; // Track mouse position
        var hoverX = 0,
            hoverY = 0; // Track hover element's desired position
        var speed = 0.1; // Control the lerp speed (0 to 1, where 1 is instant)
        hoverTarget.addEventListener("mouseenter", function () {
            projectHover.classList.add("active");
        });

        hoverTarget.addEventListener("mousemove", function (e) {
            mouseX = e.clientX - hoverWidth / 2;
            mouseY = e.clientY - hoverHeight / 2 + window.scrollY;
        });

        hoverTarget.addEventListener("mouseleave", function () {
            projectHover.classList.remove("active");
        });
        function animate() {
            // Use LERP formula to gradually move hover element towards the mouse position
            hoverX += (mouseX - hoverX) * speed;
            hoverY += (mouseY - hoverY) * speed;

            // Apply the calculated position, adjusting for element dimensions
            projectHover.style.left = hoverX + "px";
            projectHover.style.top = hoverY + "px";

            requestAnimationFrame(animate); // Continue the animation
        }

        animate(); // Start the animation loop
    });
</script>
